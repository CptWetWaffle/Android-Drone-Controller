<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Starto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:id="@+id/Starto"
    android:weightSum="1">

    <TextView android:text="Drone Rider 9000!" android:layout_width="wrap_content"
        android:textSize="40dp" android:textStyle="bold"
        android:layout_height="wrap_content" android:paddingBottom="16dp"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/pilotButton"
            android:src="@mipmap/ardronebw"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:layout_margin="16dp"
            android:onClick="goToPilot" />

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/photoButton"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/camera"
            android:layout_margin="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/videoButton"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/securitycamera"
            android:layout_margin="16dp"
            />
        <ImageButton
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/serverButton"
            android:clickable="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/server"
            android:layout_margin="16dp"
            android:onClick="goToServer" />
    </LinearLayout>
</LinearLayout>
